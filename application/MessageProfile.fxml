<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="76.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MessageProfile">
    <children>
      <VBox alignment="CENTER_LEFT" prefHeight="75.0" prefWidth="580.0" style="-fx-background-color: transparent;" stylesheets="@home.css">
         <children>
            <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#openChatBox" prefHeight="73.0" prefWidth="525.0" style="-fx-background-color: transparent;">
               <graphic>
                  <HBox accessibleRole="BUTTON" alignment="CENTER_LEFT" maxWidth="-Infinity" onMousePressed="#openChatBox" prefHeight="65.0" prefWidth="225.0" spacing="15.0">
                     <children>
                        <ImageView fx:id="imgProfile" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                        <VBox prefHeight="65.0" prefWidth="152.0">
                           <children>
                              <Label fx:id="ProfileName" text="UserName">
                                 <font>
                                    <Font name="Segoe UI Semibold" size="18.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets right="2.0" top="10.0" />
                                 </VBox.margin>
                              </Label>
                              <Label fx:id="CNIC" text="CNIC">
                                 <font>
                                    <Font name="Segoe UI Semibold" size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
    </children>
</AnchorPane>
